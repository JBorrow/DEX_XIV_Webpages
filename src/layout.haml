!!!HTML

%html
  
  %head
    %meta{"content" => "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{"charset" => "utf-8"}
    %meta{"content" => "width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no", "name" => "viewport"}
    %link{:href => "https://unpkg.com/basscss@8.0.2/css/basscss.min.css", :rel => "stylesheet"}
    %link{:href => "static/style.css", :rel => "stylesheet"}
    %title {{ header.title }}

  %body
    .content
      .stripe.fill.bg.no-print
        .header.container
          %img.logo{:src=> "{{ header.logo}}"}
          %h2 {{ header.title }}
          %h3 {{ header.start }} - {{ header.stop }}

      .navcontainer.no-print
        .navbar
          .container
            %ul.nav
              {%- for item in navigation  %}
              %li
                %a{:href => "{{ item.page }}"}
                  {{ item.name }}
              {%- endfor %}



      .stripe
        .event
          .container.clearfix
            {% block content %}{% endblock %}
      
      {% block map %}
      .stripe.fill
        .map
          %iframe{:src => "{{ map.shareurl }}", :frameborder => "0", :width => "100%", :height => "100%"}
      {% endblock %}

      .stripe.fill.bg.no-print
        .logos.container
          {%- for item in logos %}
          %a{:href => "{{ item[1] }}", :class=> "instlogo"}
            %img{:src => "static/{{ item[0] }}", :class => "instlogo"}
          {%- endfor %}

